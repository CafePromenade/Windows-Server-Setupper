<Window x:Class="Windows_Server_Tools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_Server_Tools"
        mc:Ignorable="d"
        Title="MainWindow" d:DesignHeight="447.95" d:DesignWidth="747.722" SizeToContent="WidthAndHeight">
    <Grid>
        <Button x:Name="InstallActiveDirectoryButton" Content="Submit" HorizontalAlignment="Left" Height="49" Margin="23,125,0,0" VerticalAlignment="Top" Width="226" Click="InstallActiveDirectoryButton_Click"/>
        <TextBox x:Name="DomainNameTextBox" HorizontalAlignment="Left" Margin="27,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Height="42"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,10,0,0" TextWrapping="Wrap" Text="Install Active Directory" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,43,0,0" TextWrapping="Wrap" Text="Please enter a new domain name here" VerticalAlignment="Top"/>
        <Button Content="Set Static IP" HorizontalAlignment="Left" Margin="277,10,0,0" VerticalAlignment="Top" Height="30" Width="158" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="170,192,0,0" TextWrapping="Wrap" Text="Simpsons Users" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift"/>
        <Button Content="Import, Spread and Create Groups and Shared Folders" HorizontalAlignment="Left" Height="32" Margin="27,221,0,0" VerticalAlignment="Top" Width="412" Click="Button_Click_1"/>
        <Grid HorizontalAlignment="Left" Height="243" Margin="456,10,0,0" VerticalAlignment="Top" Width="282" Background="#FFD3EAC9">
            <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0" TextWrapping="Wrap" Text="Software Installation" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift"/>
            <Button x:Name="InstallChocolateyButton" Content="Install Chocolatey" HorizontalAlignment="Left" Height="29" Margin="13,33,0,0" VerticalAlignment="Top" Width="246" Click="InstallChocolateyButton_Click"/>
            <Button x:Name="InstallChocolateySoftwareButton" Content="Start installing software" HorizontalAlignment="Left" Height="27" Margin="13,140,0,0" VerticalAlignment="Top" Width="246" Click="InstallChocolateySoftwareButton_Click"/>
            <TextBox x:Name="ChocoSoftwareTextBox" TextWrapping="Wrap" Margin="13,85,23,111"/>
            <TextBlock HorizontalAlignment="Left" Margin="13,64,0,0" TextWrapping="Wrap" Text="Enter software you would like to install" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="72,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift"><Run Language="en-ca" Text="Omega Server"/></TextBlock>
            <Button x:Name="OmegaServerPromoteButton" Content="Promote to Omega Server" HorizontalAlignment="Left" Height="37" Margin="13,201,0,0" VerticalAlignment="Top" Width="155" IsEnabled="False"/>
            <Button x:Name="SCCMButton" Content="SCCM Only" HorizontalAlignment="Left" Height="37" Margin="173,201,0,0" VerticalAlignment="Top" Width="99" IsEnabled="False" Click="SCCMButton_Click"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="1" Margin="23,270,0,0" VerticalAlignment="Top" Width="9"/>
        <Grid x:Name="InstallServerStuffGrid" HorizontalAlignment="Left" Height="152" Margin="23,270,0,0" VerticalAlignment="Top" Width="715" Background="#FFB4E6E7">
            <TextBlock HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Text="Install Server Stuff" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift"/>
            <Button x:Name="CommonInstallStuffButton" Content="Open commonly stuff menu" HorizontalAlignment="Left" Height="28" Margin="9,31,0,0" VerticalAlignment="Top" Width="169" Click="CommonInstallStuffButton_Click"/>
        </Grid>
        <Button x:Name="AdapterSettingsButton" Content="Network Adapter Settings" HorizontalAlignment="Left" Height="26" Margin="277,59,0,0" VerticalAlignment="Top" Width="162" Click="Button_Click_2"/>

    </Grid>
</Window>
